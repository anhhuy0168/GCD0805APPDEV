@model appdev.Models.TrainerUser
@{
    ViewBag.Title = "Edit Trainer Account";
}

<h2>Edit Trainer Account</h2>

<div style="display: flex; justify-content: space-between; margin-bottom: 10px;">
    <div class="form-group">
        @Html.ActionLink("Back to Trainer List ", "IndexTrainer", "Admin", new { @class = "btn btn-primary" })
    </div>
</div>

@using (Html.BeginForm("EditTrainerAccount", "Admin", FormMethod.Post))
{
    @Html.HiddenFor(i => i.TrainerId)
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(u => u.FullName)
        @Html.EditorFor(u => u.FullName, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(a => a.Age)
        @Html.EditorFor(a => a.Age, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(u => u.Address)
        @Html.EditorFor(u => u.Address, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(u => u.Specialty)
        @Html.EditorFor(u => u.Specialty, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <button type="submit" class="btn btn-primary">Edit</button>
}