@model appdev.ViewModels.CourseCategoryViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })
@using (Html.BeginForm())
{
    @Html.HiddenFor(c => c.Course.ID)

    <div class="form-group">
        @Html.LabelFor(c => c.Course.Name)
        @Html.EditorFor(c => c.Course.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(c => c.Course.Name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Course.Description)
        @Html.EditorFor(c => c.Course.Description, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(c => c.Course.Description, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Course.Category.Name)
        @Html.DropDownListFor(c => c.Course.CategoryID, new SelectList(Model.Categories, "ID", "Name"), "", new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-default">Edit</button>
}

@Html.ActionLink("Back to List", "Index")